<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:suki="clr-namespace:SukiUI;assembly=SukiUI"
             xmlns:helpers="clr-namespace:BauFahrplanMonitor.Helpers"
             xmlns:global="clr-namespace:"
             xmlns:converter="clr-namespace:BauFahrplanMonitor.Converter"
             x:Class="BauFahrplanMonitor.App">

    <Application.Resources>
        <converter:DbStatusToColorConverter x:Key="DbStatusToColorConverter"/>
        <converter:BoolToCheckIconConverter x:Key="BoolToCheckIconConverter"/>
        <converter:DebugTooltipConverter x:Key="DebugTooltipConverter"/>
        <converter:StatusSeverityToBrushConverter x:Key="SeverityToBrush"/>

        <FontFamily x:Key="FontAwesomeSolid">
            avares://BauFahrplanMonitor/Assets/Font Awesome 7 Free-Solid-900.ttf#Font Awesome 7 Free Solid
        </FontFamily>
    </Application.Resources>
    <Application.Styles>

        <!-- 1️⃣ Suki zuerst -->
        <suki:SukiTheme />

        <Style Selector="CheckBox.icon-check">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="BorderBrush" Value="#9E9E9E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3">

                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                FontSize="14"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding IsChecked,
                               RelativeSource={RelativeSource TemplatedParent},
                               Converter={StaticResource BoolToCheckIconConverter}}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="RadioButton.importer-radio">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" Spacing="8">

                            <!-- Kreis -->
                            <Border Width="16"
                                    Height="16"
                                    CornerRadius="8"
                                    BorderThickness="2"
                                    BorderBrush="Black"
                                    Background="Transparent"
                                    VerticalAlignment="Center">

                                <!-- Füllung bei Checked -->
                                <Border IsVisible="{TemplateBinding IsChecked}"
                                        Margin="3"
                                        CornerRadius="8"
                                        Background="Black"/>
                            </Border>

                            <!-- Text -->
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- ========================= -->
        <!-- Base Button -->
        <!-- ========================= -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#909090"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- ========================= -->
        <!-- Hover: nur Hintergrund -->
        <!-- ========================= -->
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#E6E6E6"/>
        </Style>

        <!-- ========================= -->
        <!-- Pressed: etwas dunkler -->
        <!-- ========================= -->
        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#DCDCDC"/>
        </Style>

        <!-- ========================= -->
        <!-- Menü-Buttons – Basis -->
        <!-- ========================= -->
        <Style Selector="Button.MenuButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#909090"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FocusAdorner" Value="{x:Null}"/>
        </Style>

        <!-- ========================= -->
        <!-- Hover -->
        <!-- ========================= -->
        <Style Selector="Button.MenuButton:pointerover">
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="BorderBrush" Value="#909090"/>
        </Style>

        <!-- ========================= -->
        <!-- Focus / Selected / Checked -->
        <!-- ========================= -->
        <Style Selector="Button.MenuButton:focus">
            <Setter Property="BorderBrush" Value="#909090"/>
        </Style>

        <Style Selector="Button.MenuButton:focus-visible">
            <Setter Property="BorderBrush" Value="#909090"/>
        </Style>

        <Style Selector="Button.MenuButton:checked">
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="BorderBrush" Value="#909090"/>
        </Style>


    </Application.Styles>
</Application>