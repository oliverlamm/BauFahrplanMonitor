<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="BauFahrplanMonitor.Views.MultiFileImporterView">

    <ScrollViewer>
        <StackPanel Margin="16" Spacing="16">

            <!-- ========================= -->
            <!-- HEADER -->
            <!-- ========================= -->
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding Title}"
                           FontSize="18"
                           FontWeight="SemiBold" />

                <Border Grid.Column="1"
                        Padding="8,3"
                        CornerRadius="10"
                        BorderBrush="#E0E0E0"
                        Background="{Binding StatusBrush}">
                    <TextBlock Text="{Binding StatusText}"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="12,0,12,0"
                               FontSize="12" />
                </Border>
            </Grid>

            <!-- ========================= -->
            <!-- VERZEICHNIS -->
            <!-- ========================= -->
            <StackPanel Spacing="6">
                <TextBlock Text="Verzeichnis"
                           FontWeight="SemiBold" />

                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Text="{Binding ImportDirectory}"
                             IsReadOnly="True" />

                    <Button Grid.Column="1"
                            Margin="8,0,0,0"
                            Command="{Binding ScanCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text=""
                                HorizontalAlignment="Right"
                                FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Scannen" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- ========================= -->
            <!-- FILTER + ACTIONS -->
            <!-- ========================= -->
            <Grid ColumnDefinitions="*,Auto"
                  VerticalAlignment="Center"
                  Margin="0,0,0,12">

                <!-- FILTER (links, kann leer sein) -->
                <StackPanel Orientation="Horizontal"
                            Spacing="12"
                            IsVisible="{Binding ShowFilters}">

                    <RadioButton Content="Alle"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterAll}" />

                    <RadioButton Content="ZvF"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterZvF}" />

                    <RadioButton Content="ÜB"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterÜB}" />

                    <RadioButton Content="Fplo"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterFplo}" />
                </StackPanel>

                <!-- BUTTONS (rechts, bleiben IMMER gleich) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">

                    <Button
                            Margin="8,0,0,0"
                            IsEnabled="{Binding CanStart}"
                            Command="{Binding StartCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text="&#xF04B;"
                                HorizontalAlignment="Right"
                                FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Start" />
                        </StackPanel>
                    </Button>
                    <Button
                            Margin="8,0,0,0"
                            IsEnabled="{Binding CanStop}"
                            Command="{Binding StopCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text="&#xF04D;"
                                HorizontalAlignment="Right"
                                FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Stop" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <!-- Dünne Trennlinie -->
            <Border Height="1"
                    Margin="0,0,0,0"
                    Background="#E0E0E0" />

            <!-- ========================= -->
            <!-- GESAMTFORTSCHRITT -->
            <!-- ========================= -->
            <StackPanel Spacing="6">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Links -->
                    <TextBlock Text="Gesamtfortschritt"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />

                    <!-- Rechts -->
                    <TextBlock Text="{Binding OverallProgressText}"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                </Grid>

                <ProgressBar Minimum="0"
                             Maximum="1"
                             Value="{Binding OverallProgress}" />

                <!-- Dünne Trennlinie -->
                <Border Height="1"
                        Margin="0,6,0,0"
                        Background="#E0E0E0" />
            </StackPanel>

            <!-- ========================= -->
            <!-- THREADS -->
            <!-- ========================= -->
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding ThreadCount, StringFormat=Import-Threads ({0})}"
                           FontWeight="SemiBold" />

                <ItemsControl ItemsSource="{Binding Threads}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"
                                         HorizontalAlignment="Stretch" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10"
                                    Margin="6"
                                    CornerRadius="6"
                                    Background="#FAFAFA">
                                <StackPanel Spacing="6">

                                    <!-- Thread Header -->
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding ThreadIndex, StringFormat=Thread {0}}"
                                                   FontWeight="SemiBold" />

                                        <Border Grid.Column="1"
                                                Padding="6,2"
                                                CornerRadius="8"
                                                Background="{Binding StatusBrush}">
                                            <TextBlock Text="{Binding Status}"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       Margin="12,0,12,0"
                                                       FontSize="11" />
                                        </Border>
                                    </Grid>

                                    <TextBlock Text="{Binding FileName}"
                                               Foreground="#555" />

                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Text="{Binding StatusMessage}"
                                                   FontSize="12"
                                                   Foreground="#777" />

                                        <TextBlock Text="{Binding ThreadProgressText}"
                                                   Grid.Column="1"
                                                   FontSize="12"
                                                   Foreground="#777"
                                                   HorizontalAlignment="Right" />
                                    </Grid>

                                    <ProgressBar Minimum="0"
                                                 Maximum="100"
                                                 Value="{Binding ThreadProgress}"
                                                 Foreground="{Binding StatusBrush}"
                                                 Height="6" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>