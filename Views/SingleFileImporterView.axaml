<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="BauFahrplanMonitor.Views.SingleFileImporterView">

    <ScrollViewer>
        <StackPanel Margin="16" Spacing="16">

            <!-- ========================= -->
            <!-- HEADER -->
            <!-- ========================= -->
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding Title}"
                           FontSize="18"
                           FontWeight="SemiBold" />

                <Border Grid.Column="1"
                        Padding="8,3"
                        CornerRadius="10"
                        BorderBrush="#E0E0E0"
                        Background="{Binding StatusBrush}">
                    <TextBlock Text="{Binding StatusText}"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="12,0,12,0"
                               FontSize="12" />
                </Border>
            </Grid>

            <!-- ========================= -->
            <!-- Datei -->
            <!-- ========================= -->
            <StackPanel Spacing="6">
                <TextBlock Text="Datei:"
                           FontWeight="SemiBold" />

                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Text="{Binding ImportFile}"
                             IsReadOnly="True" />

                    <Button Grid.Column="1"
                            Margin="8,0,0,0"
                            Command="{Binding SelectFile}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text=""
                                HorizontalAlignment="Right"
                                FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Scannen" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

            <!-- ========================= -->
            <!-- FILTER + ACTIONS -->
            <!-- ========================= -->
            <Grid ColumnDefinitions="*,Auto"
                  VerticalAlignment="Center"
                  Margin="0,0,0,12">

                <!-- FILTER (links, kann leer sein) -->
                <StackPanel Orientation="Horizontal"
                            Spacing="12"
                            IsVisible="{Binding ShowFilters}">

                    <RadioButton Content="Alle"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterAll}" />

                    <RadioButton Content="ZvF"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterZvF}" />

                    <RadioButton Content="ÜB"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterÜB}" />

                    <RadioButton Content="Fplo"
                                 GroupName="ImporterFilter"
                                 Classes="importer-radio"
                                 IsChecked="{Binding FilterFplo}" />
                </StackPanel>

                <!-- BUTTONS (rechts, bleiben IMMER gleich) -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">

                    <Button
                        Margin="8,0,0,0"
                        IsEnabled="{Binding CanStart}"
                        Command="{Binding StartCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text="&#xF04B;"
                                HorizontalAlignment="Right"
                                FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Start" />
                        </StackPanel>
                    </Button>
                    <Button
                        Margin="8,0,0,0"
                        IsEnabled="{Binding CanStop}"
                        Command="{Binding StopCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock
                                FontFamily="{StaticResource FontAwesomeSolid}"
                                Text="&#xF04D;"
                                HorizontalAlignment="Right"
                                FontSize="16" Margin="0,0,8,0" />
                            <TextBlock Text="Stop" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <!-- Dünne Trennlinie -->
            <Border Height="1"
                    Margin="0,0,0,0"
                    Background="#E0E0E0" />

            <!-- ========================= -->
            <!-- GESAMTFORTSCHRITT -->
            <!-- ========================= -->
            <StackPanel Spacing="6">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Links -->
                    <TextBlock Text="Gesamtfortschritt"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" />

                    <!-- Rechts -->
                    <TextBlock Text="{Binding OverallProgressText}"
                               Grid.Column="1"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center" />
                </Grid>

                <ProgressBar Minimum="0"
                             Maximum="1"
                             Value="{Binding OverallProgress}" />

                <!-- Dünne Trennlinie -->
                <Border Height="1"
                        Margin="0,6,0,0"
                        Background="#E0E0E0" />
            </StackPanel>

            <!-- ========================= -->
            <!-- THREADS -->
            <!-- ========================= -->
            <Border
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Padding="16"
                Margin="0,8,0,0">

                <Grid ColumnDefinitions="2*,Auto,2*"
                      RowDefinitions="Auto,Auto">

                    <!-- Header links -->
                    <TextBlock
                        Text="{Binding WorkerIndex, StringFormat=Thread {0}}"
                        FontWeight="SemiBold"
                        FontSize="14" />

                    <!-- Status Badge -->
                    <Border Grid.Column="1"
                            Background="#F0F0F0"
                            CornerRadius="6"
                            Padding="8,2"
                            HorizontalAlignment="Center">
                        <TextBlock
                            Text="{Binding StatusText}"
                            FontSize="12" />
                    </Border>

                    <!-- Statistik Titel -->
                    <TextBlock Grid.Column="2"
                               Text="Statistik"
                               FontWeight="SemiBold"
                               FontSize="14" />

                    <!-- Linke Spalte: Fortschritt -->
                    <StackPanel Grid.Row="1"
                                Spacing="6">
                        <TextBlock
                            Text="Warte auf Start"
                            Foreground="#777" />

                        <TextBlock
                            Text="{Binding ProgressText}"
                            FontSize="12" />
                    </StackPanel>

                    <!-- Rechte Spalte: Statistik -->
                    <ItemsControl Grid.Row="1"
                                  Grid.Column="2"
                                  Items="{Binding Statistics}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="{Binding Key}"
                                               Foreground="#555" />
                                    <TextBlock Text="{Binding Value}"
                                               Grid.Column="1"
                                               FontWeight="SemiBold" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>